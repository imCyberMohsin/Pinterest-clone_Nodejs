<% include ./partials/Header.ejs %>

<% include ./partials/HomeNavbar %>

        <div class="w-full h-screen bg-white flex justify-center items-start py-4">
            <div
                class="w-96 lg:w-[32vw] shadow-2xl shadow-black bg-white px-8 py-14 rounded-3xl flex flex-col items-center">
                <div class="w-full h-fit flex justify-center">
                    <img src="../images/pinterest-icon.svg" alt="logo" class="py-2">
                </div>
                <h1
                    class=" py-3 text-3xl text-center font-semibold text-zinc-700 capitalize tracking-tighter leading-none ">
                    Login To
                    Pinterest</h1>
                <% if(error.length > 0){ %>
                    <p class="text-red-600"><%= error %></p>
                <% } %> %>
                <form action="/login" method="post" class="w-full px-14">
                    <div class="my-5">
                        <p class="text-zinc-600 text-sm font-extralight px-2">Username</p>
                        <input type="text" name="username" placeholder="Username"
                            class="block mt-2 w-full px-3 py-3 rounded-2xl border-2 border-gray-300 outline-none focus:outline-4 focus:outline-sky-200  transition-all duration-200">
                    </div>
                    <div class="my-3">
                        <p class="text-zinc-600 text-sm font-extralight px-2">Password</p>
                        <input type="password" name="password" placeholder="Password"
                            class="block mt-2 w-full px-3 py-3 rounded-2xl border-2 border-gray-300 outline-none focus:outline-4 focus:outline-sky-200  transition-all duration-200">
                    </div>
                    <a href="#"
                        class="h-full w-fit px-2 text-sm  font-semibold text-gray-700 hover:underline cursor-pointer">Forgot
                        your
                        password?</a>

                    <button type="submit" class="block my-5 w-full px-3 py-2 bg-red-600 text-white rounded-full">Log
                        in</button>

                    <p class="px-1 lg:px-5 text-xs text-zinc-700">By continuing, you agree to Pinterest's <b
                            class="hover:underline">Terms of Service</b>
                        and acknowledge that you've read our <b class="hover:underline">Privacy Policy</b></p>
                    <hr>
                </form>
                <a href="/register" class="text-center block mt-2 text-xs font-semibold">Not on Pinterest yet? Sign
                    up</a>
            </div>
        </div>


<% include ./partials/Footer.ejs %>